<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="@string/label_travel_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_trip_btn"
        android:layout_toStartOf="@+id/add_trip_btn"
        android:id="@+id/catch_ride_btn" />

    <Button
        android:text="Inst."
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_trip_btn"
        android:layout_toEndOf="@+id/add_trip_btn"
        android:id="@+id/button7" />

    <Button
        android:text="@string/label_drive_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:id="@+id/add_trip_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="177.5dp"
        app:srcCompat="@drawable/bakgrund"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/pp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Namn Namnsson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="sans-serif-condensed" />


</RelativeLayout>