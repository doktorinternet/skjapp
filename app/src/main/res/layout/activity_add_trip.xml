<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gu.itu.skjapp.Presentation.AddTripActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topLinearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/startAddressET" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:style="?android:attr/buttonBarStyle">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:style="?android:attr/buttonBarButtonStyle"
                android:text="This calls Timepickerdialog"
                android:id="@+id/startTPButton"
                android:onClick="showTimePickerDialog" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calls datepickerdialog"
                android:id="@+id/startDPButton"
                android:style="?android:attr/buttonBarButtonStyle"
                android:onClick="showDatePickerDialog" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/destinationAddressET" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:style="?android:attr/buttonBarStyle">

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This calls Timepickerdialog"
            android:id="@+id/destinationTPButton"
            android:onClick="showTimePickerDialog"
            android:style="?android:attr/buttonBarButtonStyle"/>

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calls datepickerdialog"
            android:id="@+id/destinationDPButton"
            android:onClick="showDatePickerDialog"
            android:elevation="0dp"
            android:style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:id="@+id/amtPassengerSpinner"
        android:text="Amount of passengers" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectCarSpinner"
        android:text="Choose car to use"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amtPassengerSpinner" />

</RelativeLayout>
